<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">
	
     <ImageView 
        android:id="@+id/login_title_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:layout_marginLeft="147dp"
        android:src="@drawable/join_crt"
        />
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="123dp"
        android:src="@drawable/join_txt01"
        />
    
      <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="68dp"
	    android:background="@drawable/join_box02"
	    android:layout_marginTop="237dp"
	    android:orientation="horizontal"
	    >
		    <TextView
		        android:id="@+id/textView1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="이메일"
		        android:textSize="16sp"
		        android:textStyle="bold"
		        android:layout_marginLeft="30dp"
		        android:layout_marginTop="25dp"
		        android:textColor="#ffffff"
		         />
		
		   <EditText
		        android:id="@+id/editBigtureId"
		        android:layout_width="216dp"
		        android:layout_height="52dp"
		        android:layout_marginTop="8dp"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="20dp"
		        android:background="@drawable/rounded_edittext"
		        android:ems="10"
		        android:textColorHint="#aaaaaa"
		        android:textColor="#555555"
		        android:inputType="textEmailAddress"
		        android:paddingLeft="13dp" >
		        <requestFocus />
		    </EditText>
		</RelativeLayout>
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="130dp"
		    android:background="@drawable/join_box03"
		    android:layout_marginTop="307dp"
		    android:orientation="vertical"
		    >
		    
		    <RelativeLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
		        
		        <TextView
			        android:id="@+id/passwordBoxTitle"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="30dp"
		        	android:layout_marginTop="25dp"
			        android:text="비밀번호"
			        android:textStyle="bold"
			        android:textColor="#ffffff"
			        android:textSize="16sp" />
		    
		        <EditText
		            android:id="@+id/editPassword"
		            android:layout_width="216dp"
		        	android:layout_height="52dp"
		        	android:layout_marginTop="8dp"
		        	android:layout_alignParentRight="true"
		       		android:layout_marginRight="20dp"
		            android:ems="10"
		            android:background="@drawable/rounded_edittext_top"
	           		android:textColor="#555555"
	            	android:textColorHint="#aaaaaa" 
		            android:inputType="textPassword"
		            android:paddingLeft="13dp" >
		
		        </EditText>
		    </RelativeLayout>
		     <RelativeLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
		        
		        <TextView
			      
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="30dp"
		        	android:layout_marginTop="25dp"
			        android:text="닉네임"
			        android:textStyle="bold"
			        android:textColor="#ffffff"
			        android:textSize="16sp" />
		    
		        <EditText
		            android:id="@+id/editNickname"
		            android:layout_width="216dp"
		        	android:layout_height="52dp"
		        	android:layout_marginTop="8dp"
		        	android:layout_alignParentRight="true"
		       		android:layout_marginRight="20dp"
		            android:ems="10"
		            android:background="@drawable/rounded_edittext_top"
	           		android:textColor="#555555"
	            	android:textColorHint="#aaaaaa" 
		            android:paddingLeft="13dp" >
		
		        </EditText>
		    </RelativeLayout>
		</LinearLayout>
		      <Button
		        android:id="@+id/btnDone"
		        android:layout_width="340dp"
		        android:layout_height="53dp"
		        android:layout_marginTop="501dp"
		        android:layout_marginLeft="10dp"
		        android:background="@drawable/join_btn07_n"
		        android:textColor="#ffffffff"
		        android:textSize="16dp"
		        android:textStyle="bold" />
		
    
    
</FrameLayout>