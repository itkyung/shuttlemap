<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shuttlemap.android.MainActivity"
    android:background="@drawable/bg"
    android:orientation="vertical"
    >

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="96dp"
        android:background="@drawable/mainbar"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingTop="24dp"
        >
        
        <Button 
            android:id="@+id/menu1"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:background="@drawable/selector_btn_menu1"
            />
         <Button 
            android:id="@+id/menu2"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:background="@drawable/selector_btn_menu2"
            />
          <Button 
            android:id="@+id/menu3"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:background="@drawable/selector_btn_menu3"
            />
           <Button 
            android:id="@+id/menu4"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:background="@drawable/selector_btn_menu4"
            />
            <Button 
            android:id="@+id/menu5"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:background="@drawable/selector_btn_menu5"
            />
    </LinearLayout>
    
	<android.support.v4.view.ViewPager 
	    android:id="@+id/pager"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	     />

     
</LinearLayout>