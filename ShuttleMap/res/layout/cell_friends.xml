<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/common_profile_96x96" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageProfile"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageProfile"
        android:orientation="vertical" >
        
		<TextView
		    android:id="@+id/phoneLabel"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="1dp"
		    android:text="phone"
		    android:textSize="14dp"
		    />

		    <TextView
	            android:id="@+id/nameLabel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/phoneLabel"
	            android:text="이름"
	            android:textColor="#786e5a"
	            android:textSize="16dp"
	            android:maxLines="2"
	            android:textStyle="bold" />
	
	        <Button
	            android:id="@+id/btnFriends"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:textColor="#ffffff"
	            android:background="@drawable/selector_btn_popup_red"
	            android:layout_marginRight="5dp"
	            android:layout_centerVertical="true"
	            android:text="친구요청"
	            android:textSize="14dp" />
		    

    </RelativeLayout>
	   
    
</RelativeLayout>
